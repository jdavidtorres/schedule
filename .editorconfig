root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 125

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false
indent_size = 2

[*.yml]
indent_size = 2
indent_style = space

[*.xml]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
max_line_length = 100