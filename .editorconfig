root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 125

[*.ts]
quote_type = single

[*.yml]
indent_size = 2

[*.xml]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
